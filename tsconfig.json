{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@exodus/test/jest": ["./src/jest.d.ts"],
      "@exodus/test/node": ["./src/node.d.ts"],
      "@exodus/test/tape": ["./src/tape.d.ts"],
      "@exodus/test/expect": ["./src/expect.d.ts"],
      "@exodus/test/mock": ["./src/mock.d.ts"],
      "@exodus/test/benchmark": ["./src/benchmark.d.ts"]
    }
  },
  "include": ["**/*", ".*"],
  "exclude": ["node_modules"]
}
